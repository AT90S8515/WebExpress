<UserControl x:Class="WebExpress.Downloads"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress"
             mc:Ignorable="d" d:DesignWidth="300" Height="188.66">
    <Grid x:Name="Content" Margin="20" Background="White">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" Opacity="0.25" ShadowDepth="10"/>
        </Grid.Effect>
        <Label x:Name="label" Content="Downloads" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FF444444" FontSize="21.333"/>
        <Button x:Name="button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,19,15,0" Click="button_Click">
            <Image Source="pack://application:,,,/Resources/close_button.png"></Image>
        </Button>
        <Canvas x:Name="canvas" Margin="0,53,0,0">
            
        </Canvas>
    </Grid>
</UserControl>
