<UserControl x:Class="WebExpress.TabBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="300">
    
    <Grid x:Name="TabBar1" SizeChanged="TabBar1_SizeChanged">

        <Canvas x:Name="canvas">
            <Button HorizontalContentAlignment="Center" Padding="0" VerticalContentAlignment="Center" x:Name="AddButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="26" Height="26" Click="AddButton_Click" BorderThickness="0" FontSize="24" Background="{x:Null}">
                <TextBlock Text="+" Margin="0,-5,0,0"></TextBlock>
            </Button>
        </Canvas>
    </Grid>
</UserControl>
