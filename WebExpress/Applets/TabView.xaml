<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress"
             xmlns:cefSharp="clr-namespace:CefSharp;assembly=CefSharp.Core"
             xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"


             xmlns:Controls="clr-namespace:WebExpress.Controls" x:Class="WebExpress.TabView"


             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseWheel="UserControl_MouseWheel">
    <UserControl.Resources>
        <Style x:Shared="True" x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="1"
                            BorderBrush="Transparent" 
                            CornerRadius="3" 
                            Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="container">
        <local:StartPage x:Name="startPage" Margin="0,30,0,0">

        </local:StartPage>
        <wpf:ChromiumWebBrowser x:Name="WebView" Margin="0,42,0,0" PreviewMouseDown="WebView_PreviewMouseDown">

        </wpf:ChromiumWebBrowser>

        <Grid  x:Name="ListContainer" MaxHeight="135" Height="229" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#FFF9F9F9" Margin="0,42,0,0" >
            <Grid.Effect>
                <DropShadowEffect Opacity="0.2" Direction="-90" ShadowDepth="0" BlurRadius="12.5"/>
            </Grid.Effect>
            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="listBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" PreviewMouseLeftButtonDown="listBox_PreviewMouseLeftButtonDown" PreviewKeyDown="listBox_PreviewKeyDown" Background="#FFF9F9F9">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Height" Value="32" />
                    </Style>
                </ListBox.ItemContainerStyle>

            </ListBox>

        </Grid>
        
        <Grid x:Name="Panel" Height="42" VerticalAlignment="Top" Background="#FFF9F9F9">
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="1.5" Direction="-90" Opacity="0.2"/>
                </Grid.Effect>
                <TextBox Padding="10,5,0,0" x:Name="textBox" HorizontalAlignment="Stretch" Margin="153,7,108,7" VerticalAlignment="Stretch" KeyDown="textBox_KeyDown" BorderThickness="0" PreviewKeyDown="textBox_PreviewKeyDown" Background="White"  Height="28" BorderBrush="{x:Null}" GotMouseCapture="textBox_GotMouseCapture"/>
            </Grid>
            <Button Style="{StaticResource ButtonStyle}" x:Name="Back" Width="42" Height="42" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0" Click="Back_Click" MouseEnter="Back_MouseEnter" MouseLeave="Back_MouseLeave">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="BackImage" Source="pack://application:,,,/Resources/back.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="13"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="Forward" Width="42" Height="42" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="52,0,0,0" Click="Forward_Click" MouseEnter="Forward_MouseEnter" MouseLeave="Forward_MouseLeave">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="ForwardImage" Source="pack://application:,,,/Resources/forward.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="13"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="RefreshButton" Width="42" Height="42" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="94,0,0,0" Click="Refresh_Click" MouseEnter="Refresh_MouseEnter" MouseLeave="Refresh_MouseLeave">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="RefreshImage" Source="pack://application:,,,/Resources/reload.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="13"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="MenuButton" Width="42" Height="42" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Stretch" HorizontalAlignment="Right" Margin="0,0,10,0" Click="MenuButton_Click" MouseEnter="MenuButton_MouseEnter" MouseLeave="MenuButton_MouseLeave" >
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="MenuImage" Source="pack://application:,,,/Resources/menu.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="13"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="BookmarkButton" Width="42" Height="42" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Stretch" HorizontalAlignment="Right" Margin="0,0,52,0" Click="BookmarkButton_Click" MouseEnter="BookmarkButton_MouseEnter" MouseLeave="BookmarkButton_MouseLeave" >
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="BookmarkImage" Source="pack://application:,,,/Resources/bookmark.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="13"/>
                </StackPanel>
            </Button>
        </Grid>



       


    </Grid>
</UserControl>



