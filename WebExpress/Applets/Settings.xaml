<UserControl x:Class="WebExpress.Applets.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Applets"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1024">
    <Grid Background="White">
        <Grid HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="1024" Background="#FF1ABC9C">
            <Grid.Effect>
                <DropShadowEffect Direction="-90" ShadowDepth="10" BlurRadius="15" Opacity="0.25"/>
            </Grid.Effect>
            <Label x:Name="Header" Content="Settings" HorizontalAlignment="Left" Margin="38,7,0,0" VerticalAlignment="Top" Foreground="White" FontSize="32"/>
        </Grid>

    </Grid>
</UserControl>
